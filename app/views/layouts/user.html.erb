<!DOCTYPE html>
<html>
  <head>
    <title>FeedMe | <%= @page_title || @user_name %></title>
    <%= stylesheet_link_tag 'user' %>
  </head>
  <body>

    <div id="mainBlock">
      <div id="header">
        <h1>FeedMe</h1>
        <div class="navigation_links">
          <div class="navigation_link"><a href="\access\logout">Logout</a></div>
          <div class="navigation_link"><a href="\user\display">Home</a></div>
          <div class="navigation_link"><a href="">Edit Account</a></div>
          <div class="navigation_link"><a href="">Add/Remove Subscriptions</a></div>
          <div class="navigation_link"><a href="">Favourites</a></div>
        </div>
      </div>
      <div id="main">
        <div id="content">
          <!-- before yield -->
          <%= yield %>
          <!-- after yield -->
        </div>
      </div>
      <div id="footer">
        <p id="copyright">&copy; FeedMe</p>
      </div>
    </div>

  </body>
  <style>
    #header{
      background-color: white;
    }
    #mainBlock{
      margin-left: 1.5em;
      margin-right: 1.5em;
      margin-top: 1.5em;
      margin-bottom: 1.5em;
      border-color: black;
      border-style: solid;
      background-color: white;
      border-width: 2px;
      box-shadow: 10px 10px 10px grey;
    }
    body{
      background-color: rgb(198, 236, 198);
    }
    h1{
      margin-left: 1em;
    }

  </style>

</html>
