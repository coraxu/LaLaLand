<!DOCTYPE html>
<html>
  <head>
    <title>FeedMe | <%= @page_title || @user_name %></title>
    <%= stylesheet_link_tag 'user' %>
  </head>
  <body>

    <div id="mainBlock">
      <div id="header">
        <h1>FeedMe</h1>
        <div class="navigation_links">

          <div id="button1" class="navigation_link"><a class="menu" href="\user\display">Home</a></div>
          <div id="button2" class="navigation_link"><a class="menu" href="">Edit Account</a></div>
          <div id="button3" class="navigation_link"><a class="menu" href="">Add/Remove Subscriptions</a></div>
          <div id="button4" class="navigation_link"><a class="menu" href="">Favourites</a></div>
          <div id="button5" class="navigation_link"><a class="menu" href="\access\logout">Logout</a></div>

        </div>
      </div>
      <div id="main">
        <div id="content">
          <!-- before yield -->
          <%= yield %>
          <!-- after yield -->
        </div>
      </div>
      <div id="footer">
        <p id="copyright">&copy; FeedMe</p>
      </div>
    </div>

  </body>
  <style>
    #header{
      background-color: white;
    }
    #mainBlock{
      margin-left: 1.5em;
      margin-right: 1.5em;
      margin-top: 1.5em;
      margin-bottom: 1.5em;
      border-color: black;
      border-style: solid;
      background-color: white;
      border-width: 2px;
      box-shadow: 10px 10px 10px grey;
    }
    #button1:hover{
      background-color: #ff5050;
    }
    #button2:hover{
      background-color: #ff5050;
    }
    #button3:hover{
      background-color: #ff5050;
    }
    #button4:hover{
      background-color: #ff5050;
    }
    #button5:hover{
      background-color: #ff5050;
    }
    .navigation_link{
      padding-left: 3em;
      background-color: rgb(51, 204, 51);
      border-width: 1px;
    }
    .menu{
      color: white;
      text-decoration: none;
    }
    body{
      background-color: rgb(198, 236, 198);
    }
    h1{
      margin-left: 1em;
    }


  </style>

</html>
